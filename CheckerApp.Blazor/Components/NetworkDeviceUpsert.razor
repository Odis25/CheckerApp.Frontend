<MudDialog>
    <DialogContent>
        <EditForm Model="Value" OnValidSubmit="Save">
            <FluentValidationValidator />
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Margin="Margin.Dense" Label="Название" @bind-Value="Value.Name" Variant="Variant.Outlined" For="()=> Value.Name" />
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Margin="Margin.Dense" Label="IP" @bind-Value="Value.IP" Variant="Variant.Outlined" For="()=> Value.IP" />
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Margin="Margin.Dense" Label="MAC-Address" @bind-Value="Value.MacAddress" Variant="Variant.Outlined" For="()=> Value.MacAddress" />
                </MudItem>
            </MudGrid>

            <MudButton ButtonType="ButtonType.Submit"
                       Color="Color.Primary"
                       StartIcon="@Icons.Filled.Save"
                       FullWidth="true"
                       Class="mt-5 mb-3 py-3"
                       Variant="Variant.Filled">Сохранить</MudButton>

        </EditForm>
    </DialogContent>
</MudDialog>