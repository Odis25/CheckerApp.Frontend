<EditForm Model="Command" style="min-width:500px;" OnValidSubmit="Submit">
    <FluentValidationValidator />

    <h5>Шаг 1. Выберите тип ПО:</h5>

    <MudSelect @bind-Value="Command.SoftwareType" Variant="Variant.Outlined">
        @foreach (var item in _softwareTypes)
        {
            <MudSelectItem Value="item">@item.GetDisplayName()</MudSelectItem>
        }
    </MudSelect>
    <hr />
    <div class="mb-2 row">
        <div class="col">
            <MudTextField Label="Название" @bind-Value="Command.Name" Variant="Variant.Outlined"></MudTextField>
            <ValidationMessage For="()=> Command.Name"></ValidationMessage>
        </div>
    </div>
    <div class="mb-2 row">
        <div class="col">
            <MudTextField Label="Версия" @bind-Value="Command.Version" Variant="Variant.Outlined"></MudTextField>
            <ValidationMessage For="()=> Command.Version"></ValidationMessage>
        </div>
    </div>
    <hr />
    <button class="btn btn-primary w-100 shadow" type="submit">
        <span class="oi oi-check"></span> Сохранить
    </button>

</EditForm>
