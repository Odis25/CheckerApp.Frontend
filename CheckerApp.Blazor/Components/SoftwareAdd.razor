
<MudDialog>
    <DialogContent>
        <EditForm Model="Command" OnValidSubmit="Submit">
            <FluentValidationValidator />

            <MudGrid>
                <MudItem xs="12">
                    <MudSelect Margin="Margin.Dense" Label="Тип программного обеспечения" @bind-Value="Command.SoftwareType" Variant="Variant.Outlined">
                        @foreach (var item in _softwareTypes)
                        {
                            <MudSelectItem Value="item">@item.GetDisplayName()</MudSelectItem>
                        }
                    </MudSelect>
                </MudItem>
            </MudGrid>

            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Margin="Margin.Dense" Label="Название" @bind-Value="Command.Name" Variant="Variant.Outlined" For="()=> Command.Name" />
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Margin="Margin.Dense" Label="Версия" @bind-Value="Command.Version" Variant="Variant.Outlined" For="()=> Command.Version" />
                </MudItem>
            </MudGrid>

            <MudButton ButtonType="ButtonType.Submit"
                       Color="Color.Primary"
                       StartIcon="@Icons.Filled.Save"
                       FullWidth="true"
                       Class="mt-5 mb-3 py-3"
                       Variant="Variant.Filled">Сохранить</MudButton>

        </EditForm>
    </DialogContent>
</MudDialog>
