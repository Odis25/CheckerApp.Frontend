@using CheckerApp.Blazor.Models.Commands

<MudGrid>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense" Label="Позиция по проекту" @bind-Value="Value.Position" Variant="Variant.Outlined" For="()=> Value.Position" />
    </MudItem>
</MudGrid>
<MudGrid>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense" Label="Серийный номер" @bind-Value="Value.SerialNumber" Variant="Variant.Outlined" For="()=> Value.SerialNumber" />
    </MudItem>
</MudGrid>
<MudGrid>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense" Label="Модель контроллера" @bind-Value="Value.DeviceModel" Variant="Variant.Outlined" For="()=> Value.DeviceModel" />
    </MudItem>
</MudGrid>
<MudGrid>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense" Label="IP адрес" @bind-Value="Value.IPAddress" Variant="Variant.Outlined" For="()=> Value.IPAddress" />
    </MudItem>
</MudGrid>
<MudGrid>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense" Label="Версия сборки" @bind-Value="Value.AssemblyVersion" Variant="Variant.Outlined" For="()=> Value.AssemblyVersion" />
    </MudItem>
</MudGrid>
<MudGrid>
    <MudItem xs="12">
        <MudTextField Margin="Margin.Dense" Label="Контрольная сумма" @bind-Value="Value.CRC32" Variant="Variant.Outlined" For="()=> Value.CRC32" />
    </MudItem>
</MudGrid>
<MudGrid>
    <MudItem xs="12">
        <MudNumericField Margin="Margin.Dense" Label="Дата последней конфигурации" @bind-Value="Value.LastConfigDate" Variant="Variant.Outlined" For="()=> Value.LastConfigDate" />
    </MudItem>
</MudGrid>


@code {
    [Parameter] public CreateHardwareCommandVm Value { get; set; }
    [Parameter] public EventCallback<CreateHardwareCommandVm> ValueChanged { get; set; }
}