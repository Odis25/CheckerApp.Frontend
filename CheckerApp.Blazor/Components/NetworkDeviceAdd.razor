
<MudDialog>
    <DialogContent>
        <EditForm Model="Device" OnValidSubmit="Save">
            <FluentValidationValidator />
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Margin="Margin.Dense" Label="Название" @bind-Value="Device.Name" Variant="Variant.Outlined" For="()=> Device.Name" />
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Margin="Margin.Dense" Label="IP" @bind-Value="Device.IP" Variant="Variant.Outlined" For="()=> Device.IP" />
                </MudItem>
            </MudGrid>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Margin="Margin.Dense" Label="MAC-Address" @bind-Value="Device.MacAddress" Variant="Variant.Outlined" For="()=> Device.MacAddress" />
                </MudItem>
            </MudGrid>

            <MudButton ButtonType="ButtonType.Submit"
                       Color="Color.Primary"
                       StartIcon="@Icons.Filled.Save"
                       FullWidth="true"
                       Class="mt-5 mb-3 py-3"
                       Variant="Variant.Filled">Сохранить</MudButton>

        </EditForm>
    </DialogContent>
</MudDialog>
