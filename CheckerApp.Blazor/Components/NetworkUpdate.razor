<MudGrid>
    <MudItem xs="4">
        <MudGrid>
            <MudItem xs="12">
                <MudTextField Margin="Margin.Dense" Label="Позиция по проекту" @bind-Value="Value.Position" Variant="Variant.Outlined" For="()=> Value.Position" />
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField Margin="Margin.Dense" Label="Тип прибора" @bind-Value="((NetworkHardwareVm)Value).DeviceType" Variant="Variant.Outlined" For="()=> ((NetworkHardwareVm)Value).DeviceType" />
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField Margin="Margin.Dense" Label="Модель прибора" @bind-Value="((NetworkHardwareVm)Value).DeviceModel" Variant="Variant.Outlined" For="()=> ((NetworkHardwareVm)Value).DeviceModel" />
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField Margin="Margin.Dense" Label="Серийный номер" @bind-Value="Value.SerialNumber" Variant="Variant.Outlined" For="()=> Value.SerialNumber" />
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="12">
                <MudTextField Margin="Margin.Dense" Label="Маска подсети" @bind-Value="((NetworkHardwareVm)Value).Mask" Variant="Variant.Outlined" For="()=> ((NetworkHardwareVm)Value).Mask" />
            </MudItem>
        </MudGrid>
    </MudItem>
    <MudItem xs="8">
        <NetworkDeviceTable @bind-Value="((NetworkHardwareVm)Value).NetworkDevices" />
    </MudItem>
</MudGrid>

@code {

    [Parameter] public HardwareVm Value { get; set; }
    [Parameter] public EventCallback<HardwareVm> ValueChanged { get; set; }
}
